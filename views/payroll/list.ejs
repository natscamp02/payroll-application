<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head') -%>
</head>

<body>
    <%- include('../partials/alerts') -%>

        <main class="dashboard">
            <%- include('../partials/sidebar', { activeLink: 'payroll' }) -%>

                <div class="divider divider-horizontal"></div>

                <div class="container">
                    <div class="flex justify-between items-center mb-6">
                        <div>
                            <h1 class="heading mb-1">Payroll</h1>
                            <span class="text-gray-500 text-lg">
                                <%= locals.pay_period || 'June 20 - July 1' %>
                            </span>
                        </div>

                        <% if (locals.user.role==='supervisor' ) { %>
                            <!-- <a href="/employees/add" class="btn rounded-full px-6 gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                                </svg>
                                Add new employee
                            </a> -->
                            <% } %>
                    </div>

                    <!-- Filters -->
                    <div class="mb-12">
                        <form action="/payroll" method="get">
                            <div class="form-control">
                                <div class="input-group gap-2">
                                    <input class="input input-bordered" type="date" name="start_date" id="start_date"
                                        value="2022-06-20">
                                    <input class="input input-bordered" type="date" name="end_date" id="end_date"
                                        value="2022-07-01">
                                </div>
                            </div>
                        </form>
                    </div>

                    <table class="table w-full">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Employee Name</th>
                                <th>Department</th>
                                <th># of hours worked</th>
                                <th># of hours overtime</th>
                                <th>Net Pay</th>
                                <th>Days Absent</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th></th>
                                <th>John Smith</th>
                                <td>Accounts</td>
                                <td>80</td>
                                <td>5</td>
                                <th>$120,000</th>
                                <td>0</td>
                                <td>
                                    <div class="flex items-center gap-2 flex-wrap">
                                        <a href="/payroll/payslip" class="btn btn-sm btn-ghost">Generate Payslip</a>

                                        <a href="/payroll/<%# emp.id %>/edit"
                                            class="text-info btn btn-circle btn-ghost">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                                                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>

                                        <% if (locals.user.role==='supervisor' ) { %>

                                            <a href="/payroll/<%# emp.id %>/delete"
                                                class="text-error btn btn-circle btn-ghost">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                                                    viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </a>

                                            <% } %>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
        </main>
</body>

</html>